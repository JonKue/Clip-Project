<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.example.LoginActivity" >

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

    <Space
        android:id="@+id/Space3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

   

    <Space
        android:id="@+id/Space2"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp" />

    <FrameLayout
        android:id="@+id/FrameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Space2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="@string/CLIP"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Main"
        android:layout_below="@+id/Main"
        android:layout_marginTop="22dp"
        android:background="@android:color/white"
        android:ems="10"
        android:shadowColor="@android:color/black" >

        <requestFocus />

    </EditText>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editUserName"
        android:layout_below="@+id/editUserName"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:background="@android:color/white"
        android:inputType="textPassword" >
    </EditText>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUserName"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/TextView01"
        android:text="Password:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="52dp"
        android:text="@string/username"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editUserName"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="28dp"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonNavigateRegisterActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonRegister"
        android:layout_alignBottom="@+id/buttonRegister"
        android:layout_alignLeft="@+id/editPassword"
        android:text="Register" />

    <TextView
        android:id="@+id/wrongPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/denied"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible" />

</RelativeLayout>