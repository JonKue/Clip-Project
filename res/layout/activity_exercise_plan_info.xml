<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/healthRed">

    <TextView
        android:id="@+id/tvEPname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan" />

    <EditText
        android:id="@+id/etEPname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tvEProutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Routine" />

    <EditText
        android:id="@+id/etEProutine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etEPstarttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="HH:MM"
        android:inputType="time">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etEPendtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="HH:MM"
        android:inputType="time" />

    <TextView
        android:id="@+id/tvEPotherInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/other_info" />

    <EditText
        android:id="@+id/etEPotherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/bEPsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save" />


</LinearLayout>